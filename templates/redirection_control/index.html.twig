{% extends 'base.html.twig' %}

{% block title %}Hello RedirectionControlController!{% endblock %}

{% block body %}
    <style>
        /* Add custom styles for this template */
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
            background-color: #fff; /* Set a white background */
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .btn-custom {
            background-color: #007BFF; /* Change button color to blue */
            color: #fff; /* Set button text color to white */
            border: none; /* Remove button border */
            padding: 10px 20px; /* Add some padding for better button appearance */
            border-radius: 3px;
            cursor: pointer;
        }

        .btn-custom:hover {
            background-color: #0056b3; /* Change button color on hover */
        }

        /* Add background image to the body */
        body {
            background-image: url('{{ asset('img/Research.jpg') }}'); /* Replace 'your_image.jpg' with your image file name */
            background-size: 1600px 300px; /* Set a fixed size, e.g., 400px width and 200px height */
            background-attachment: fixed;
            background-position: top;
            background-repeat: no-repeat;
        }
    </style>


    <div class="navbar navbar-expand-lg navbar-light bg-light">
        <!-- Your navigation bar here -->
    </div>

    <div class="text-center" style="margin-top: 220px;" >
        <h1 style="color: #007BFF;">Bienvenue chez GSB</h1>
    </div>

{% endblock %}
