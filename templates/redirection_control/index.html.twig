{% extends 'base.html.twig' %}

{% block title %}Hello RedirectionControlController!{% endblock %}

{% block body %}
    <style>
        /* Add custom styles for this template */
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
            background-color: #fff; /* Set a white background */
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .btn-custom {
            background-color: #007BFF; /* Change button color to blue */
            color: #fff; /* Set button text color to white */
            border: none; /* Remove button border */
            padding: 10px 20px; /* Add some padding for better button appearance */
            border-radius: 3px;
            cursor: pointer;
        }

        .btn-custom:hover {
            background-color: #0056b3; /* Change button color on hover */
        }
    </style>

    <div class="example-wrapper">
        <h1>Hello {{ controller_name }}! âœ…</h1>

        This friendly message is coming from:
        <form action="{{ path('app_logout') }}" method="post">
            <button type="submit" class="btn btn-custom">Logout</button>
        </form>
    </div>
{% endblock %}

