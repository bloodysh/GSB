{% extends 'base.html.twig' %}

{% block title %}Saisir Fiche Frais{% endblock %}

{% block body %}
    <div class="container">
        <h1>Saisir Fiche Frais</h1>

        <div class="row">
            <div class="col-md-6">
                {% if formFraisForfait %}
                    {{ form_start(formFraisForfait) }}
                    {{ form_widget(formFraisForfait) }}
                    <button type="submit" class="btn btn-primary">Submit</button>
                    {{ form_end(formFraisForfait) }}
                {% endif %}
            </div>
            <div class="col-md-6">
                {% if formHorsForfait %}
                    {{ form_start(formHorsForfait) }}
                    {{ form_widget(formHorsForfait) }}
                    <button type="submit" class="btn btn-primary">Submit</button>
                    {{ form_end(formHorsForfait) }}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
