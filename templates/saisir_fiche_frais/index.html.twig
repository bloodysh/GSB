{% extends 'base.html.twig' %}

{% block title %}Saisir Fiche Frais{% endblock %}

{% block body %}

    <div class="container">
        <h1>Saisir Fiche Frais</h1>

        <div class="row">
            <div class="col-md-6">
                {% if formFraisForfait %}
                    {{ form_start(formFraisForfait) }}
                    {{ form_widget(formFraisForfait) }}
                    <button type="submit" class="btn btn-primary">Submit</button>
                    {{ form_end(formFraisForfait) }}
                {% endif %}
            </div>
            <div class="col-md-6">
                {% if formHorsForfait %}
                    {{ form_start(formHorsForfait) }}
                    {{ form_widget(formHorsForfait) }}
                    <button type="submit" class="btn btn-primary">Submit</button>
                    {{ form_end(formHorsForfait) }}
                {% endif %}
            </div>

            <div class="col-md-6">
                {% if fraisHorsForfaitAffichage %}
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th scope="col">Date</th>
                            <th scope="col">Libelle</th>
                            <th scope="col">Montant</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for frais in fraisHorsForfaitAffichage %}
                            <tr>
                                <td>{{ frais.getDate() | date('d/m/Y') }}</td>
                                <td>{{ frais.getLibelle() }}</td>
                                <td>{{ frais.getMontant() }}</td>
                                <td>
                                    <form methode="post" action="{{ path('supprimer_frais', {'id': frais.getId()}) }}">
                                        <button type="submit" class="btn btn-danger">Supprimer</button>
                                </td>
                            </tr>

                        {% endfor %}
                        </tbody>
                    </table>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
