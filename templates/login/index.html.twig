{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
    <style>
        /* Define the CSS animation for the floating coin */
        @keyframes float-coin {
            0%, 100% {
                bottom: 0;
            }
            50% {
                bottom: 70px; /* Float up */
            }
        }

        /* Define the CSS animation for the coin's horizontal movement */
        @keyframes move-coin {
            0% {
                left: -100px; /* Start off the left side of the page */
            }
            100% {
                left: calc(100% + 100px); /* Move to the right side of the page */
            }
        }

        /* Define the CSS animation for changing the coin's color */
        @keyframes change-color {
            0% {
                background-color: #f1c40f; /* Start with one color */
            }
            25% {
                background-color: #e74c3c; /* Change to another color */
            }
            50% {
                background-color: #3498db; /* Change to another color */
            }
            75% {
                background-color: #27ae60; /* Change to another color */
            }
            100% {
                background-color: #f1c40f; /* Return to the original color */
            }
        }

        /* Apply the animations to the coin */
        .coin {
            position: absolute;
            width: 100px; /* Adjust the width as needed */
            height: 100px; /* Make it a square shape */
            background-color: #f1c40f; /* Yellow background color for a coin-like appearance */
            border: 2px solid #d4ac0d; /* Darker yellow border */
            border-radius: 50%; /* Rounded shape for a coin */
            animation: move-coin 4s linear infinite, float-coin 2s ease-in-out infinite, change-color 10s linear infinite; /* Adjust durations and timing functions as needed */
        }

        /* Set the background color to grey/white */
        body {
            overflow-x: hidden;
            background-color: #f8f8f8; /* Grey/white background color */
        }

        /* Add styles for button and input elements */
        button.pop-up-fade, input.form-control, .form-group.pop-up-fade h1, .form-group.pop-up-fade label {
            opacity: 0;
            transform: translateY(20px);
            animation: fade-in 0.5s ease-in-out 0.6s forwards;
        }

        /* Define a fade-in animation for button, input, h1, and label elements */
        @keyframes fade-in {
            0% {
                opacity: 0;
                transform: translateY(20px);
            }
            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }


    </style>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <div class="form-group pop-up-fade">
                    <h1>Login:</h1>
                </div>
                <form action="{{ path('app_login') }}" method="post">
                    <div class="form-group pop-up-fade">
                        <label for="username">Email:</label>
                        <input type="text" id="username" name="_username" class="form-control">
                    </div>

                    <div class="form-group pop-up-fade">
                        <label for="password">Password:</label>
                        <input type="password" id="password" name="_password" class="form-control">
                    </div>

                    <input type="hidden" name="_target_path" value="/redirection/control">

                    <button type="submit" class="btn btn-primary pop-up-fade">Login</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Add the animated coin -->
    <div class="coin"></div>
    </div>
{% endblock %}
